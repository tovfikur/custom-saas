{
  "dashboard": {
    "id": null,
    "title": "SaaS Orchestrator Overview",
    "tags": ["saas", "orchestrator"],
    "style": "dark",
    "timezone": "Asia/Dhaka",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "VPS Hosts Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "value": "1",
                "text": "Online"
              },
              {
                "type": "value", 
                "value": "0",
                "text": "Offline"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green", 
                  "value": 1
                }
              ]
            },
            "unit": "short"
          }
        },
        "targets": [
          {
            "expr": "up{job=\"node-exporter\"}",
            "legendFormat": "{{instance}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Nginx Config Operations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "xAxis": {
          "show": true
        },
        "yAxes": [
          {
            "label": "Operations",
            "min": 0,
            "show": true
          }
        ],
        "targets": [
          {
            "expr": "rate(nginx_config_operations_total{status=\"success\"}[5m])",
            "legendFormat": "Successful"
          },
          {
            "expr": "rate(nginx_config_operations_total{status=\"failed\"}[5m])",
            "legendFormat": "Failed"
          }
        ]
      },
      {
        "id": 3,
        "title": "API Response Times",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {
            "label": "Response Time (s)",
            "min": 0,
            "show": true
          }
        ],
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"saas-api\"}[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"saas-api\"}[5m]))",
            "legendFormat": "50th percentile"
          }
        ]
      },
      {
        "id": 4,
        "title": "System Resource Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100,
            "show": true
          }
        ],
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage - {{instance}}"
          },
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory Usage - {{instance}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Odoo Instances Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "width": 0
            },
            "mappings": [
              {
                "type": "value",
                "value": "1",
                "text": "Running"
              },
              {
                "type": "value",
                "value": "0", 
                "text": "Down"
              }
            ]
          }
        },
        "targets": [
          {
            "expr": "up{job=\"odoo-instances\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true
              }
            }
          }
        ]
      },
      {
        "id": 6,
        "title": "Recent Audit Events",
        "type": "logs",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        },
        "targets": [
          {
            "expr": "{job=\"saas-api\", level=\"audit\"}",
            "legendFormat": ""
          }
        ]
      }
    ]
  }
}