# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/saas_orchestrator
DATABASE_TEST_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/saas_orchestrator_test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this

# Timezone
TIMEZONE=Asia/Dhaka

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure-admin-password

# SSH Configuration
SSH_PRIVATE_KEY_PATH=/app/keys/id_rsa
SSH_TIMEOUT=30

# Nginx Configuration
NGINX_CONFIG_WATCH_WINDOW_SECONDS=120
NGINX_CONFIG_MAX_VERSIONS=10

# Monitoring
PROMETHEUS_PORT=8001

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Celery
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# Development
DEBUG=False
RELOAD=False